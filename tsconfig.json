{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-native",
        "strict": true,
        "baseUrl": "./",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "paths": {
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@config/*": ["src/config/*"],
            "@utils/*": ["src/utils/*"],
            "@hooks/*": ["src/hooks/*"],
            "@assets/*": ["src/assets/*"],
            "@global/*": ["src/global/*"],
            "@services/*": ["src/services/*"],
            "@routes/*": ["src/routes/*"],
            "@context/*": ["src/context/*"]
        }
    },
    "include": ["src/**/*"]
}
